{
    "version": 2,
    "cmakeMinimumRequired": 
    {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
    {
        "name"          : "Base",
        "description"   : "Sets generator, build and install directory",
        "hidden"        : true,
        "binaryDir"     : "${sourceDir}/Build/${presetName}",
        "cacheVariables": 
        {
            "CMAKE_INSTALL_PREFIX"          : "${sourceDir}/Install/${presetName}",
            "CMAKE_CXX_STANDARD"            : "17",
            "CMAKE_CXX_STANDARD_REQUIRED"   : "ON",
            "CMAKE_TOOLCHAIN_FILE"          : "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        "environment": {"VCPKG_FEATURE_FLAGS" : "manifests,versions,binarycaching,registries"},
        "architecture": 
        {
            "value": "x64",
            "strategy": "external"
        }
    },
    {
        "name"          : "MSVC-Base",
        "description"   : "MSVC x64 Configuration",
        "generator"     : "Visual Studio 17 2022",
        "inherits"      : [ "Base" ],
        "cacheVariables": 
        {
            "CMAKE_CXX_COMPILER": "cl",
            "CMAKE_CXX_FLAGS": "/UMBCS /D_UNICODE /DUNICODE /arch:AVX2"
        },
        "vendor": 
        {
            "microsoft.com/VisualStudioSettings/CMake/1.0": 
            {
                "hostOS": [ "Windows" ]
            }
        },
        "environment": {"ASAN_SAVE_DUMPS" : "ForerunnerEngineASAN.dmp"}
    },
    {
        "name": "Clang-Base",
        "description": "Clang x64 Configuration",
        "inherits": "Base",
        "hidden": true,
        "cacheVariables": 
        {
            "CMAKE_BUILD_TYPE": "Debug",
            "CMAKE_C_COMPILER": "clang",
            "CMAKE_CXX_COMPILER": "clang++"
        }
    },
    {
        "name": "Linux-Base",
        "description": "Linux x64 Configuration",
        "inherits": "Clang-Base",
        "generator": "Unix Makefiles",
        "vendor": {
            "microsoft.com/VisualStudioSettings/CMake/1.0": 
            {
                "hostOS": ["Linux"]
            }
        },
        "warnings": 
        {
            "dev": true
        }
    },
    {
        "name": "MacOS-Base",
        "description": "MacOS x64 Configuration",
        "inherits": "Clang-Base",
        "hidden": true,
        "vendor": {
            "microsoft.com/VisualStudioSettings/CMake/1.0": 
            {
                "hostOS": ["macOS"]
            }
        },
        "cacheVariables": {
            "CMAKE_OSX_ARCHITECTURES" : "arm64;x86_64"
        },
        "warnings": 
        {
            "dev": true
        }
    },
    {
        "name": "MacOS-XCode",
        "description": "Linux x64 Configuration with Dev Warnings",
        "inherits": "MacOS-Base",
        "generator": "Xcode"
    },
    {
        "name": "MacOS-Unix-Makefiles",
        "description": "Unix Makefiles x64 Configuration with Dev Warnings",
        "inherits": "MacOS-Base",
        "generator": "Unix Makefiles"
    }
    ],
    "buildPresets": [
        {
            "name": "Core-Build",
            "description": "Inherits environment from base configurePreset",
            "configurePreset": "Base",
            "hidden": true,
            "inheritConfigureEnvironment": true
        },
        {
            "name": "Clean-Build",
            "description": "Clean before build (--clean-first)",
            "configurePreset": "MSVC-Base",
            "inherits": "Core-Build",
            "cleanFirst": true
        },
        {
            "name": "Verbose-Build",
            "description": "Passes -v to Ninja",
            "configurePreset": "MSVC-Base",
            "inherits": "Core-Build",
            "nativeToolOptions": [ "-v" ]
        },
        {
            "name": "Clang-Clean-Build",
            "configurePreset": "Clang-Base",
            "inherits": "Clean-Build"
        }
    ]
}